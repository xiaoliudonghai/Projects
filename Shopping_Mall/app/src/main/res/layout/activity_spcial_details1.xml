<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.SpcialDetails1Activity">
<ImageView
    android:src="@mipmap/ic_launcher"
    android:layout_marginTop="@dimen/t_20dp"
    android:scaleType="fitXY"
    android:id="@+id/iv_specialdetails"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y150" />
    <TextView
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:id="@+id/tv_specialdetails"
        android:text="11"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tv_specialdetails"
        android:id="@+id/tv2_specialdetails"
        android:layout_centerInParent="true"
        android:text="11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv3_specialdetails"
        android:layout_below="@+id/tv2_specialdetails"
        android:text="你号"
        android:layout_centerInParent="true"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_specialdetails"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:layout_gravity="center"
            android:textSize="@dimen/t_20dp"
            android:id="@+id/sub_web_collectTv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/y16"
            android:textSize="@dimen/t_20dp"
            android:id="@+id/sub_web_shopTv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/y16"
            android:textSize="@dimen/t_20dp"
            android:id="@+id/sub_web_serverTv"/>
        <Button
            android:layout_marginLeft="@dimen/y10"
            android:layout_width="0dp"
            android:layout_height="@dimen/y34"
            android:layout_weight="2"
            android:textSize="14sp"
            android:id="@+id/bt_spcial_details"
            android:background="@drawable/bt_shape_subject2"
            android:layout_gravity="center_vertical"
            android:text="加入购物车"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/y34"
            android:layout_weight="2"
            android:textSize="14sp"
            android:id="@+id/bt_spcial1_details"
            android:background="@drawable/bt_shape_subject1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/y5"
            android:text="立即购买"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv4_specialdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/ll_specialdetails"
        android:text="相关推荐"/>
</RelativeLayout>