<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x80"
    android:orientation="vertical">
    <CheckBox
        android:id="@+id/ck_shopcar_chose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:visibility="visible"
        android:scaleX="0.6"
        android:scaleY="0.6" />
    <ImageView
        android:id="@+id/iv_shopcar_pic"
        android:layout_width="@dimen/x65"
        android:layout_height="@dimen/y60"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/ic_launcher"
        android:layout_toRightOf="@id/ck_shopcar_chose" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/iv_shopcar_pic"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_shopcar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酒红色纯红色纯羊毛西服套装"
            android:textColor="@color/Shoptextcolor"
            android:textSize="@dimen/x13"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x25"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_shopcar_price"
                android:layout_width="@dimen/x60"
                android:layout_height="wrap_content"
                android:text="￥301"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/x12"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/rl_edit"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/x50"
                >
                <TextView
                    android:id="@+id/iv_shopcar_sub"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    android:layout_margin="@dimen/x1"
                    android:layout_height="match_parent"
                    android:text=" - " />

                <TextView
                    android:id="@+id/tv_shopcar_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_margin="@dimen/x1"
                    android:layout_height="match_parent"
                    android:text="1"
                    />

                <TextView
                    android:id="@+id/iv_shopcar_add"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_margin="@dimen/x1"
                    android:layout_height="match_parent"
                    android:text=" + " />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_shopcar_delete"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/y20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/shopcar_delete"
        android:gravity="center"
        android:layout_margin="@dimen/x5"
        android:visibility="gone" />

</RelativeLayout>